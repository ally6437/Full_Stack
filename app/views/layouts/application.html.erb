<!DOCTYPE html>
<html>
  <head>

    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma-rtl.min.css">
  </head>
   <body>
    <nav class="navbar is-primary" role="navigation" aria-label="main navigation">
      <div class="navbar-brand">
        <%= link_to "Home - Nasdaq Top 100 Companies", root_path, class: "navbar-item" %>

        <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
        </a>
      </div>

      <div id="navbarBasicExample" class="navbar-menu">
        <div class="navbar-start">


          <a class="navbar-item" href="<%= companies_path %>">
            Companies
          </a>

          <a class="navbar-item" href="<%= industries_path %>">
            Industries
          </a>

          <a class="navbar-item" href="<%= sectors_path %>">
            Sectors
          </a>

          <a class="navbar-item" href="<%= about_index_path %>">
            About
          </a>
        </div>
      </div>
    </nav>

  <body><section>
      <div class="container">

      </div>
      <%= form_with(url: search_companies_path, method: :get, local:true) do %>
      <div class="field is-grouped mb-5">
      <%= text_field_tag(:keywords, nil, class: "input", placeholder: "Search for companies")%>
      </div>
      <div class="control">
        <%= submit_tag("search", class:"button is_primary")%>
        </div>
      <%end%>
      <%= yield %>
      <!--%= paginate @companies, theme: 'bulma' %-->
    </section>
    <%= render partial: 'shared/footer' %>
  </body>
</html>
